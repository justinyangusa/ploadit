//-
	backbone.jade defines the backbone of the website.
	The head and script declarations are all in here.
	All pages should extend backbone in some fashion.

doctype html
html(ng-app='ngAddApp', lang='en')
	head.no-js
		title= "Ploadit"
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='Ploadit')
		meta(name='author', content='Ploadit')

		link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
		link(rel='stylesheet', href='css/main.css')
		link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css')

		link(href='//fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic', rel='stylesheet', type='text/css')
		link(href='//fonts.googleapis.com/css?family=Raleway:400,300,700', rel='stylesheet', type='text/css')

		link(rel='icon', type='image/png', href='img/favicon.png')
		link(rel='shortcut icon', href='img/favicon.png')

	body
		block bodyContent

		script(src='js/jquery.min.js')
		script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js')
		script(src='js/smoothscroll.js')
