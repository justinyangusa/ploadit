extends backbone
block bodyContent
	block pageContent
		#navigation.navbar.navbar-default.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/profile')
						img(src='/img/favicon.png', alt='Ploadit')
						| &nbsp;
						b Ploadit
				ul.nav.navbar-nav.navbar-right
					li
						p Welcome, #{user.local.fname}!
					li
						a.btn.btn-default.btn-sm(href='/logout') Logout
		.container
			.page-header.text-center
				h1
					span.fa.fa-anchor &nbsp; Profile Page
				a.btn.btn-default.btn-sm(href='/logout') Logout
			.row
				//- LOCAL INFORMATION
				.col-sm-6
					.well
						h3
							span.fa.fa-user
							| Local
						p
							strong name
							| : #{user.local.fname} #{user.local.lname}
							br
							strong id
							| : #{user._id}
							br
							strong email
							| : #{user.local.email}
							br
							strong password
							| : #{user.local.password}
