extends backbone

block bodyContent
	// Fixed navbar
	#navigation.navbar.navbar-default.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand
					img(src='/img/favicon.png', alt='Ploadit')
					| &nbsp;
					b Ploadit
			ul.nav.navbar-nav.navbar-right
				li
					p Welcome, #{user.local.fname}!
				li
					a.btn.btn-default.btn-sm(href='/logout') Logout
			// /.nav-collapse
	section#home(name='home')
	#headerwrap
		.container
			.row.centered
				.col-lg-12
					h1
						| Good day, #{user.local.fname}!
			.row.centered
				.col-lg-6
					h1
						span.fa.fa-sign-in &nbsp;Login

					// LOGIN FORM
					form(action='/upload', method='post')
						.form-group
							.input-group
								span.input-group-addon Title
								input.form-control(type='text', name='title', placeholder='Chapter 17 Notes')
						.form-group
							.input-group
								span.input-group-addon File
								input.form-control(type='file', name='file')
						button.btn.btn-warning.btn-lg(type='submit') Upload
						p An admin will review your file and it will be uploaded within 24 hours.
						p
							| Problems?
							a(href='mailto:info@ploadit.com') Email us!
				.col-lg-6
					a(href='/uploads')
						button.btn.btn-warning.btn-lg See all uploads.
